---
import { Image } from "astro:assets";
import github from "../images/GitHub-Mark.png";
import discord from "../images/discord.jpg";
import hamza from "../images/hamza12700.jpg";
import ibrahim from "../images/ibrahim.png";
import codeIcon from "../images/icon-code.jpg";
import instagram from "../images/instagram-icon.jpg";
import letterH from "../images/letter-H.png";
import twitter from "../images/twitter.png";
import shazim from "../images/shazim.jpg"
import Layout from "../layout/Layout.astro";
---

<Layout title="Contact Anime Paradise Members">
  <h1 class="heading">Team Members</h1>
  <h2 class="heading">Owner</h2>
  <div class="contact-container">
    <div class="contact-card owner">
      <div class="contact-image">
        <Image src={ibrahim} alt="Owner Image" />
      </div>
      <div class="contact-details">
        <h2>Infinite Programmer</h2>
        <p>Frontend Web Developer</p>
        <div class="social-links">
          <a href="https://ibrahim-amv.pages.dev" target="_blank">
            <Image src={codeIcon} alt="Ibrahim's Website" />
          </a>
          <a href="https://discordapp.com/users/infinite_programmer" target="_blank">
            <Image src={discord} alt="Infinite Programmer's Discord" />
          </a>
          <a
            href="https://instagram.com/infinite_programmer786"
            target="_blank"
          >
            <Image src={instagram} alt="Instagram" />
          </a>
        </div>
      </div>
    </div>
    <h2 class="heading">Contributors</h2>
    <div class="contributors">
      <div class="contact-card">
        <div class="contact-image">
          <Image src={hamza} alt="Hamza Rashid" />
        </div>
        <div class="contact-details">
          <h2>Hamza Rashid</h2>
          <p>Frontend Web Developer</p>
          <div class="social-links">
            <a href="https://hamza127.netlify.app" target="_blank">
              <Image src={letterH} alt="Hamza's Website" />
            </a>
            <a href="https://x.com/Hamza_Rash1d" target="_blank">
              <Image src={twitter} alt="Twitter" />
            </a>
            <a href="https://github.com/hamza12700" target="_blank">
              <Image src={github} alt="GitHub" />
            </a>
          </div>
        </div>
      </div>

      <div class="contact-card">
        <div class="contact-image">
          <Image src={shazim} alt="Hamza Rashid" />
        </div>
        <div class="contact-details">
          <h2>Shazim Khot</h2> 
          <p>Contributor</p>
          <div class="social-links">
            <a
            href="https://www.instagram.com/shazim._17/"
            target="_blank"
          >
            <Image src={instagram} alt="Instagram" />
          </a> 
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style lang="scss">
  .contact-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem; 
  }

  .heading {
  text-align: center;
  margin: 3rem 0 0.2rem 0;
}

  .contact-card {
    display: flex;
    align-items: center;
    background-color: #191d2b;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    border-radius: 1rem;
    overflow: hidden;
    max-width: 450px;
    text-align: left;

    img {
      border-radius: 100%;
      object-fit: cover;
      width: 100%;
      height: 100%;
    }
  }

  .contact-image {
    width: 120px;
    height: 120px;
    padding-left: 1rem;
  }

  .contact-details {
    flex-grow: 1;
    padding: 20px;
    text-align: left;
    background-color: #191d2b;
    h2 {
      font-size: 24px;
      margin: 0;
    }
    p {
      font-size: 16px;
      color: #ccc;
      margin: 0 0 20px;
    }
  }

  .social-links {
    display: flex;
    justify-content: space-between;
    a {
      text-decoration: none;
    }
    img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background-color: #00b7ff;
      padding: 5px;
      transition: transform 0.3s;
      &:hover {
        transform: scale(1.2);
      }
    }
  }
  .contributors {
    display: flex;
    align-items: center;
    gap: 3rem; 
    padding-bottom: 50px;
  }
</style>
