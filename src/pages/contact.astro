            Personal Websiterget="_blank"><Image id="h-website"
              src={letterH} alt="Portfolio Website"></a>
        </div>
      </div>
    </div>

    <div class="team-member">
      <div class="circle-image">
        <Image src={ibrahim} alt="Team Member 3">
      </div>
