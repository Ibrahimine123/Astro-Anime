  <section id="contact">
    <div class="team-member">
      <div class="circle-image">
        <Image src={hamza} alt="Team Member 1">
      </div>
      <div class="member-details">
        <h2>Hamza Rashid</h2>
        <div class="social-links">
          <a href="https://github.com/hamza12700" target="_blank"><Image src={github} alt="Github"></a>          ttps://x.com/Hamza_Rash1d" target="_blank"><img src=".Im
