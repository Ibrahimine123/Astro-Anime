<style>
  #contact {
    margin-top: auto;
    margin-bottom: auto;
    padding: 40px 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}

.team-member {
    width: 95%;
    max-width: 400px;
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 10px;
    margin-bottom: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    transition: transform 0.3s;
    height: 350px; 
}

.circle-image {
    width: 100%;
    background-color: #333;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    overflow: hidden;
    height: 40%;
}

.circle-image img {
    object-fit: cover;
    max-width: 100%; 
    max-height: 100px; 
    border-radius: 50%;
    width: 100px;
    height: 100px;
    border: 3px solid #fff;
    margin: 10px auto;
}
.member-details {
    width: 100%;
    padding: 20px;
    flex-grow: 1; 
}

.member-details h2 {
  color: #333;
}


.social-links {
    margin: 15px 0; 
}

.social-links a {
    display: inline-block;
    margin: 0 15px; 
    text-decoration: none;
}

.social-links img {
    width: 3.2rem; 
    border-radius: 50%;
    background-color: #00b7ff;
    padding: 5px;
    transition: transform 0.3s;
}

.social-links img:hover {
    transform: scale(1.2);
}

.contact-links a {
    text-decoration: none;
    color: #00b2f8;
    font-weight: bold;
    margin: 10px 0; 
    display: block;
    transition: color 0.3s;
}

.contact-links a:hover {
    color: #1e98c9;
}

#h-website {
  padding: 0;
  width: 4rem;
}
</style>